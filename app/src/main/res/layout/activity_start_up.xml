<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".StartUp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Start_BTN_bikeRide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"
            app:iconTint="#110E15"
            android:text="Lets ride"
            android:textSize="20sp"
            android:textColor="#0D0C0E"
            android:drawableTop="@drawable/ic_rider_150"
            android:tag="lets ride"
             />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Start_BTN_goal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"
            app:iconTint="#110E15"
            android:text="goal"
            android:textColor="#0D0C0E"
            android:drawableTop="@drawable/ic_map_150"
            android:tag="goal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Start_BTN_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"
            android:text="history"
            app:iconTint="#110E15"
            android:textColor="#0D0C0E"
            android:drawableTop="@drawable/ic_history_150"
            android:tag="history"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Start_BTN_statistics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="statistics"
            app:iconTint="#110E15"
            android:textColor="#0D0C0E"
            android:drawableTop="@drawable/ic_statistics_150"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:tag="statistics"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Start_BTN_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"
            android:text="settings"
            app:iconTint="#110E15"
            android:textColor="#0D0C0E"
            android:drawableTop="@drawable/ic_settings_150"
            android:tag="settings"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Start_BTN_friends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_weight="1"
            android:text="friends"
            app:iconTint="#110E15"
            android:textColor="#0D0C0E"
            android:drawableTop="@drawable/ic_friends_150"
            android:tag="friends"
            />
    </LinearLayout>

</LinearLayout>